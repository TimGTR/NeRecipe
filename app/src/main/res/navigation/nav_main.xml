<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.gtsystems.nerecipe.ui.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_fragmentPostDetail"
            app:destination="@id/fragmentPostDetail" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.gtsystems.nerecipe.ui.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" >
        <action
            android:id="@+id/action_newPostFragment_to_fragmentPostDetail"
            app:destination="@id/fragmentPostDetail" />
        <action
            android:id="@+id/action_newPostFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentPostDetail"
        android:name="ru.gtsystems.nerecipe.ui.FragmentPostDetail"
        android:label="FragmentPostDetail" >
        <action
            android:id="@+id/action_fragmentPostDetail_to_newPostFragment"
            app:destination="@id/newPostFragment" />
    </fragment>
</navigation>